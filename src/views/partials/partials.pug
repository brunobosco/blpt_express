
mixin loader 
    .loader 
        .loader_wrapper(class="grid")
            .loader_logo 
                +logo-short

            .loader_loading 
                span|Loading assets
                .loader_line
                    div

                span.loader_percentage|0

            .loader_copy 
                span|&copy; 2022 - brunobosco

mixin page-transition 
    .pt
        .pt_wrapper(class="grid")
            p.pt_loading|Loading assets...
            p.pt_info|pathname:
            p.pt_pathname|++++

